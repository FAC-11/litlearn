{{>header}}
{{>extract}}

<form id='multichoice-question' action='../explanation' method='POST'>
  {{#each data.options}}
    <input type='radio'
     value='{{@index}}' id='option{{@index}}'
      name='{{this}}'
    >
    <label for='option{{@index}}'> {{this}} </label>

  {{/each}}

  {{>navbar}}

  <!-- stick some stuff on the navbar -->
  <img id='lightbulb' src='../assets/lightbulb.ico' class= 'navbar_hint-btn'
    data-hint-html = '{{data.hint}}'
    >
  <input type='submit' value="submit" style="background:url('../assets/goforward.png');" class= 'navbar_forward-btn'>

</form>

